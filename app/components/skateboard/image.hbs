<button type="button" class="image {{if this.isLarge "large"}}" {{on "click" this.toggleSize}}>
    <img ...attributes>
    {{#if this.isLarge}}
    <small><i class="fa fa-search-minus" aria-hidden="true"></i></small>
    {{else}}
    <small><i class="fa fa-search-plus" aria-hidden="true"></i></small>
    {{/if}}
</button>